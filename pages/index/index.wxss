.containe {
  width: 100%;
}
image{
  width: 100%;
}
.header{
  border-left-width: 4px;
  border-left-color: #F00;
  border-left-style: solid;
  display: flex;
  justify-content: space-between;
  align-items: center; 
}
.text-all{
  color: #F9021B;
  font-size: 14px;
}

.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.content-item{
  height: 250rpx;
  width: 45%;
  background: #ccc;
  margin: 3px;
  position: relative;
  
}
.content-item image{
  height:100%;
  width: 100%;

}
.content-item-text{
  position: absolute;
  bottom: 2px;
  font-size: 12px;
  color: #fff;
  width: 100%; 
  height: 35rpx;
  background-color: rgba(0, 0, 0, 0.2);
  text-align: center;
}

.list-item{
  height:auto;
  width:100%;
}

.list-item-image{
  height: 100px;
  padding: 9px;
  padding-right: 16px;
  position: relative;
}
.item-main{
   height: 100%;
   padding: 3px;
}

.list-item-text{
  height:auto;
  font-size: 10px;
  padding: 12px;
}
.mo{
  width: 30px;
  height: 30px;
  position: absolute;
  bottom: -10px;
  right: 30px;
  border-radius: 0.5;
}