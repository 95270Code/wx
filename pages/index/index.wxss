.containe {
  width: 100%;
}
image{
  width: 100%;
}
.header{
  border-left-width: 4px;
  border-left-color: #F00;
  border-left-style: solid;
  display: flex;
  justify-content: space-between;
  align-items: center; 
}
.text-all{
  color: #f0f;
  font-size: 14px;
}

.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.content-item{
  height: 250rpx;
  width: 45%;
  background: #ccc;
  margin: 3px;
  position: relative;
  
}
.content-item image{
  height:100%;
  width: 100%;

}
.content-item-text{
  position: absolute;
  bottom: 2px;
  font-size: 12px;
  color: #fff;
  width: 100%; 
  height: 35rpx;
  background-color: rgba(0, 0, 0, 0.2);
  text-align: center;
}